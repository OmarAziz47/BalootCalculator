    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:src="@mipmap/playingcards"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="-100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/appName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

    </RelativeLayout>


    // لنا و لهم !!!!!!!!!!

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_below="@+id/relativeLayout1"
        android:background="@drawable/round_button_second_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        // لنا لنا لنا لنا لنا لنا

        <TextView
            android:id="@+id/SecLeft"
            android:layout_width="100dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/us"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:text="0"
            android:textColor="#808080"
            android:textSize="48dp" />

        <TextView

            android:id="@+id/us"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"


            android:layout_marginBottom="25dp"
            android:text="لهم"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/counter_us"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/SecLeft"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:inputType="number"
            android:text=""
            android:textColor="#808080" />

        // لنا
        <TextView
            android:id="@+id/them"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="لنا"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/SecRight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/them"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textSize="48dp" />

        <EditText
            android:id="@+id/counter_them"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SecRight"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:inputType="number"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#808080" />

        <Button android:layout_alignParentBottom="true"
            android:id="@+id/Button1"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:onClick="enter"
            android:text="سجل"
            android:textAlignment="center"
            android:layout_marginBottom="25dp"
            android:textColor="#ffff"
            android:textSize="25sp"
             />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/RelativeLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button_second_color"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="آخر نتيجة"
            android:textColor="#808080"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView

        android:id="@+id/ScrollDown1"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@+id/rel3"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button_second_color"
        >


        <RelativeLayout
            android:id="@+id/Rel1"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:id="@+id/SecRight2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="#808080"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/SecLeft2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#808080"
                android:textSize="25dp" />


    </RelativeLayout>

</ScrollView>




    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ScrollDown1"
        android:layout_marginTop="25dp">
         <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
            android:onClick="back"
            android:text="تراجع"
            android:textColor="#ffff"
            android:textSize="15sp"
            android:background="@drawable/round_button"
            />
            <Button
                android:id="@+id/reset_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:onClick="reset"
                android:text="صكة جديدة"
                android:textColor="#ffff"
                android:textSize="15sp"
                android:background="@drawable/round_button"
                />

     </RelativeLayout>

</RelativeLayout>